<?php
$weatherData = $block->getWeatherData();

if (is_string($weatherData)) {
    echo '<p>' . $weatherData . '</p>'; // Hiển thị lỗi nếu có
} else {
    $temperatureC = $weatherData['main']['temp'];
    $temperatureF = $block->convertToFahrenheit($temperatureC);
    echo '<div class="weather-info">';
    echo '<h2 class="weather-city">' . $this->escapeHtml($weatherData['name']) . '</h2>';
    echo '<p class="weather-temp">' . $this->escapeHtml($temperatureC) . '°C / ' . $this->escapeHtml($temperatureF) . '°F</p>';
    echo '<p class="weather-desc"><img src="http://openweathermap.org/img/wn/' . $this->escapeHtml($weatherData['weather'][0]['icon']) . '@2x.png" alt="' . $this->escapeHtml($weatherData['weather'][0]['description']) . '"> ' . $this->escapeHtml($weatherData['weather'][0]['description']) . '</p>';
    echo '<p class="weather-humidity">Humidity: ' . $this->escapeHtml($weatherData['main']['humidity']) . '%</p>';
    echo '<p class="weather-wind">Wind Speed: ' . $this->escapeHtml($weatherData['wind']['speed']) . ' m/s</p>';
    echo '</div>';
}
